<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/wagerPlayer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="@+id/wagerPlayer2"
        app:layout_constraintStart_toStartOf="@+id/wagerPlayer2"
        app:layout_constraintTop_toBottomOf="@+id/wagerPlayer2" />

    <CheckBox
        android:id="@+id/wagerPlayer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="@+id/wagerPlayer3"
        app:layout_constraintStart_toStartOf="@+id/wagerPlayer3"
        app:layout_constraintTop_toBottomOf="@+id/wagerPlayer3" />

    <CheckBox
        android:id="@+id/wagerPlayer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="@+id/wagerPlayer4"
        app:layout_constraintStart_toStartOf="@+id/wagerPlayer4"
        app:layout_constraintTop_toBottomOf="@+id/wagerPlayer4" />

    <CheckBox
        android:id="@+id/wagerPlayer6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="@+id/wagerPlayer5"
        app:layout_constraintStart_toStartOf="@+id/wagerPlayer5"
        app:layout_constraintTop_toBottomOf="@+id/wagerPlayer5" />

    <CheckBox
        android:id="@+id/wagerPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="@+id/wagerPlayer1"
        app:layout_constraintStart_toStartOf="@+id/wagerPlayer1"
        app:layout_constraintTop_toBottomOf="@+id/wagerPlayer1" />

    <TextView
        android:id="@+id/wagerTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rascal of Roatan"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wagerTitle" />

    <TextView
        android:id="@+id/wagerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Wager points with"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/wagerPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="@+id/wagerSubTitle"
        app:layout_constraintStart_toStartOf="@+id/wagerSubTitle"
        app:layout_constraintTop_toBottomOf="@+id/wagerSubTitle" />

    <TextView
        android:id="@+id/wagerSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="125dp"
        android:text="Who wagered points?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wagerSubTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="How many points?"
        app:layout_constraintBottom_toBottomOf="@+id/wagerSubTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wagerSubTitle" />

    <CheckBox
        android:id="@+id/points10CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="10"
        app:layout_constraintEnd_toEndOf="@+id/wagerSubTitle2"
        app:layout_constraintStart_toStartOf="@+id/wagerSubTitle2"
        app:layout_constraintTop_toBottomOf="@+id/wagerSubTitle2" />

    <CheckBox
        android:id="@+id/points20CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="20"
        app:layout_constraintEnd_toEndOf="@+id/points10CheckBox"
        app:layout_constraintStart_toStartOf="@+id/points10CheckBox"
        app:layout_constraintTop_toBottomOf="@+id/points10CheckBox" />

    <Button
        android:id="@+id/wagerGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>