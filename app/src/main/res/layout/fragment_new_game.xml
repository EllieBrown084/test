<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/expansionPack"
        android:layout_width="203dp"
        android:layout_height="111dp"
        android:text="Are you playing with the expansion pack?"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <CheckBox
        android:id="@+id/expansionPackCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="@+id/expansionPack"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/expansionPack"
        app:layout_constraintTop_toBottomOf="@+id/expansionPack"
        android:onClick="pleaseHelp"
        />

    <Button
        android:id="@+id/newGameGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/numberOfPlayersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="How many players?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/expansionPackCheck"
        app:layout_constraintStart_toStartOf="@+id/expansionPackCheck"
        app:layout_constraintTop_toBottomOf="@+id/expansionPackCheck" />

    <EditText
        android:id="@+id/numberOfPlayers"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/numberOfPlayersText"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/numberOfPlayersText"
        app:layout_constraintTop_toBottomOf="@+id/numberOfPlayersText" />

</androidx.constraintlayout.widget.ConstraintLayout>